extends layout

block content
  h1= title
  p Welcome to the page #{title}
  p I like playing cricket 
  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    p You are currently logged in as #{user.username}
    a(href="/pens") Take me to pens
    br
    a(href="/logout") Logout
  br
  button(type="button", class="btn btn-secondary" onclick='update()') press me 
  br
  br
  div(id='target') Display
  br
  a(href='/pens') Search pens page
  script.
    var client_count = 0;
    function update(){
      client_count++
      document.getElementById("target").innerHTML = `Value now ${client_count}`
    }  
  