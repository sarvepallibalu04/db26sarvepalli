extends layout

block content
  h1= title
  
  div(class="container-fluid")
        div(class="row")
            -
                let pens = results
            each pen, index in pens 
                div(class="col-sm-2" onclick=`buy(${index})`) #{pen.pentype} #{pen.color} #{pen.price}
            script.
                function buy(itemNo){
                    alert(`You purchased Item ${itemNo+1}`)
                } 
  